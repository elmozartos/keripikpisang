    <!-- Script Logika WhatsApp -->
    <script>
        function pesanWA(rasa) {
            // Nomor WA Tujuan
            const nomorWA = "6285156201575"; 
            
            // Format Pesan
            const pesan = `permisi mas saya mau pesan kripik pisang rasa ${rasa}`;
            
            // Mengubah spasi dan karakter khusus agar aman di URL
            const pesanEncoded = encodeURIComponent(pesan);
            
            // Buat URL API WhatsApp
            const urlWA = `https://wa.me/${nomorWA}?text=${pesanEncoded}`;
            
            // Buka di tab baru
            window.open(urlWA, '_blank');
        }
    </script>
